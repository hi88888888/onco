@require 'lib/helpers'
@require 'lib/foundation'



body
  padding 1em
  background #F4F3F3

// <track-list>
.container
  display grid
  // ~ + mixin __не проеби
  grid-template-rows 100px repeat(2, 4fr) 70px
  // -> func auto__size__columns___~1()
  grid-gap 2px
  box-sizing border-box
  // -> func auto__size__columns___~2()
  padding 2px
  width auto
  height auto



@media (min-width 48em)
  body
    padding 0

@media (max-width 18.75em)
  html
    font-size 5.5vw
